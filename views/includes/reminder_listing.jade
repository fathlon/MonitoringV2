#reminderContent
  table.rtable
    tr
      th.rtdel
      th.rtname Name
      th.rtfreq Frequency
      th.rtrecur Recurring
      th.rtdate Date
      th.rttime Time
      each reminder, rid in reminders
        tr
          td: img(src='/images/delete.png', class='deleteImg', onclick='removeReminder("#{rid}");')
          td #{reminder.rname}
          td #{reminder.frequency}
          td #{reminder.recurring}
          td #{reminder.dow} #{reminder.date}
          td #{reminder.time}